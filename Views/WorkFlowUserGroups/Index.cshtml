@model IEnumerable<EmployeesManagement.Models.WorkFlowUserGroup>

@{
    ViewData["Title"] = "Workflow User Groups";
}
<p>
    <a asp-action="Create" class="btn btn-primary"> <i class="fa fa-plus"></i> Add New Workflow User group</a>
</p>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Workflow User Groups List</h3>
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                       @Html.DisplayNameFor(model => model.Code)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DocumentTypeId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DepartmentId)
                    </th>
                    <th>
                            @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                                @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DocumentType.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Department.Name)
                        </td>
                        <td>
                                @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <div class="input-group input-group-lg">
                                <div class="input-group-prepend">
                                    <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown">
                                        Action
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li class="dropdown-item">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa fa-edit"></i> Edit</a>
                                        </li>
                                        <li class="dropdown-divider"></li>
                                        <li class="dropdown-item"> <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa fa-eye"></i> View</a></li>
                                        <li class="dropdown-divider"></li>
                                        <li class="dropdown-item"><a asp-action="Index" asp-controller="WorkFlowUserGroupMembers" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa fa-lock"></i> Assign Approvers</a></li>
                                    </ul>
                                </div>
                            </div>

                        </td>
                    </tr>
                    }
            </tbody>
        </table>
    </div>
</div>

