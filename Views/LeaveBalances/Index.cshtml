@model IEnumerable<EmployeesManagement.Models.Employee>

@{
    ViewData["Title"] = "Leave Balances";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Employees Leave Balances</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="example" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.EmpNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FullName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AllocatedLeaveDays)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LeaveOutStandingBalance)
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmpNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AllocatedLeaveDays)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LeaveOutStandingBalance)
                            </td>
                            <td>
                                <div class="ms-auto">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-primary">Actions</button>
                                        <button type="button" class="btn btn-primary split-bg-primary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown">
                                            <span class="visually-hidden">Toggle Dropdown</span>
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-end">
                                            <a asp-action="AdjustLeaveBalance" asp-route-id="@item.Id" class="dropdown-item"><i class="bx bxs-lock-alt"> Adjust</i> </a>
                                            <div class="dropdown-divider"></div>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="dropdown-item"><i class="bx bxs-bullseye"> View</i></a>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>