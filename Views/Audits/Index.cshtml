@model IEnumerable<EmployeesManagement.Models.Audit>

@{
    ViewData["Title"] = "System Audit Logs";
}
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table id="example" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.UserId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AuditType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TableName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateTime)
                        </th>
                        <th>View</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AuditType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TableName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateTime)
                            </td>
                            <td>
                                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id"><i class="fa fa-eye"> </i> View</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

